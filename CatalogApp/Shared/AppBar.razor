<MudAppBar Color="Color.Primary">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="ToggleSidebarAsync" />
    <MudSpacer/>
    <MudIconButton Icon="@ThemeIcon()" Color="Color.Inherit" OnClick="ToggleThemeAsync"></MudIconButton>
</MudAppBar>

@code {

    [Parameter]
    public EventCallback OnSidebarToggled{ get; set; }

    [Parameter]
    public EventCallback OnThemeToggled{ get; set; }

    private bool _sideBarOpen = false;
    private bool _isDarkMode = false;

    //*************************************************************************

    private async Task ToggleSidebarAsync()
    {
        _sideBarOpen = !_sideBarOpen;
        await OnSidebarToggled.InvokeAsync();
    }

    private async Task ToggleThemeAsync()
    {
        _isDarkMode = !_isDarkMode;
        await OnThemeToggled.InvokeAsync();
    }

    private string ThemeIcon() => _isDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode;
}
